{
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.hover": true,
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml": "yaml"
  },
  // Disable specific validation rules that cause false positives
  "yaml.customTags": [
    "!reference sequence"
  ]
} 